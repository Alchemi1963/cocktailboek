<!DOCTYPE html>
<html lang="nl">
<head>
    <%- include("head.ejs") %>
    <link href="/styles/editor.css" rel="stylesheet" type="text/css">
</head>

<header id="header">
    <%- include("header.ejs", {filter: false}) %>
</header>

<body>
<form action="<%= location %>" method="POST">
    <input type="hidden" name="cocktail" id="cocktail">
    <input type="hidden" name="scroll" id="scroll">
    <fieldset>

        <% if (location === "/new") { %> <h2>Nieuwe cocktail</h2> <% } %>
        <% if (location === "/admin/cocktails/edit") { %> <h2>Edit cocktail</h2> <% } %>

        <div class="field">
            <label for="name">Naam:</label>
            <input type="text" name="name" id="name" required>
        </div>

        <div class="field">
            <label for="selectGlass">Glas:</label>
            <select name="selectGlass" id="selectGlass" required>
                <option name="longdrink" value="longdrink">Longdrink</option>
                <option name="tumbler" value="tumbler">Tumbler</option>
                <option name="papa" value="papa">Papa</option>
                <option name="pul" value="pul">Pul</option>
                <option name="pitcher" value="pitcher">Pitcher</option>
                <option name="shot" value="shot">Shot</option>
            </select>
        </div>

        <div class="field">
            <label for="desc">Omschrijving:</label>
            <textarea name="desc" id="desc" rows="4" cols="30"></textarea>
        </div>

        <div class="field">
            <label for="creator">Maker:</label>
            <input type="text" name="creator" id="creator">
        </div>

        <div class="field">
            <label for="nieuweSelectAlcohol" id="alcoholLabel">Alcohol:</label>
            <div>
                <input type="text" id="selectAlcoholSearch" placeholder="Zoek een drankje">
                <select name="selectAlcohol" id="nieuweSelectAlcohol" multiple></select>
            </div>
        </div>

        <div class="field" id="alcoholAmount" style="display:none">
            <label>Hoeveel alcohol?</label>
        </div>

        <div class="field">
            <label for="nieuweSelectNonAlcohol">Non Alcohol:</label>
            <div>
                <input type="text" id="selectNonAlcoholSearch" placeholder="Zoek een drankje">
                <select name="selectNonAlcohol" id="nieuweSelectNonAlcohol" multiple></select>
            </div>
        </div>

        <div class="field" id="nonAlcoholAmount" style="display:none">
            <label>Hoeveel non alcohol?</label>
        </div>

        <div class="field">
            <label for="extraStuff">Extra dingen er in?</label>
            <button id="addExtra">+</button>
            <div id="extraStuff">
            </div>
        </div>

        <div class="field">
            <button type="reset" id="reset">Reset</button>
            <button type="submit" id="submit">Submit</button>
        </div>
    </fieldset>
</form>

<%- scripts %>

</body>
</html>
